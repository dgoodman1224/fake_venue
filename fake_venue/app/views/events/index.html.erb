<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <div class = "event">
      <%= event.title %>
      <div id = "main_act">
        <%= event.artist %>
    </div>
      <% if event.artist_second %>
        <%= event.artist_second + (" , " + event.artist_third) if event.artist_third + (" , " + event.artist_fourth) if event.artist_fourth  %> 
      <% end %>

      <tr>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Do you want to delete this event?' } %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

<br>

